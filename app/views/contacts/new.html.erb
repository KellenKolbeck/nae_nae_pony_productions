<div id="contact_photo">
  <%= image_tag('joe_and_gavin.jpg')%>
</div>

<div align="center">
  <h3>Send a Message to Nae Nae Pony Productions</h3>

  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.text_field :name, :required => true %>
    <%= f.text_field :email, :required => true %>
    <%= f.text_area :message, :as => :text, :required => true %>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit 'Send message', class:"btn btn-warning" %>
    </div>
  <% end %>
</div>
