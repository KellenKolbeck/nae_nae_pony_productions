<div id= "post-header">
  <span id="post-head"><%=@post.post_title %> </span>| <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post), :data => {:confirm => "Are you sure?", :method => "delete"}%>
</div>

<br>
<br>
<%= @post.post_body %>

<br>
<br>
<h3>Comments:</h3>
<ul>
  <% @post.comments.order(created_at: :desc).each do |comment| %>
    <li><%= comment.comment_body %> - posted <%= time_ago_in_words(comment.created_at) %> ago
    | <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
    | <%= link_to 'Delete', post_comment_path(@post, comment), :data => {:confirm => "Are you sure?", :method => "delete"}%></li>
  <% end %>
</ul>
<br><br>
<h4><%= link_to "Add comment", new_post_comment_path(@post) %></h4>
