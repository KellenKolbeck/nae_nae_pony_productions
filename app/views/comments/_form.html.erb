<% if current_user %>
  <%= render "layouts/errors", :object => @comment %>

  <%= form_for [@post, @comment] do |f| %>
  <%= f.label :comment_body %>
  <%= f.text_area :comment_body %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit, class: 'btn btn-warning btn-large' %>
  <% end %>
<% else %>
  <h3>You must login to comment!</h3>
<% end %>
